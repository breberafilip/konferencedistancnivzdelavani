{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "jsx": "react",
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "es2016",
    "lib": ["DOM", "ESNext"],
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "@vuedx/typescript-plugin-vue"
      }
    ],
    "types": [
      "vite/client",
      "vue",
      "vite-plugin-pages/client",
      "vite-plugin-vue-layouts/client"
    ],
    "paths": { "@/*": ["src/*"] }
  },
  "exclude": ["dist", "node_modules"]
}
